<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".presentation.ui.LoginActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F3F2F4"
                app:cardCornerRadius="15dp">

            <ImageView
                android:layout_margin="20dp"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center_horizontal" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Email"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/slightly_rounded"
                android:maxLines="1"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp"  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Required"
                android:textColor="@color/quantum_googred"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slightly_rounded"
                android:hint="Name"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:padding="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Required"
                android:textColor="@color/quantum_googred"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User password"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/name_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slightly_rounded"
                android:hint="Password"
                android:padding="5dp"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:textSize="16sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Required"
                android:textColor="@color/quantum_googred"
                android:textSize="16sp" />

            <Button
                android:id="@+id/new_sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_rounded_button_primary"
                android:layout_marginTop="20dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@android:color/white"
                app:backgroundTint="@null"
                android:background="@drawable/bg_rounded_button_secondary"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                 />
        </LinearLayout>
</LinearLayout>
